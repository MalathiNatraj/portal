            //intrusionDataItem = { "deviceId": vals };
            
            $.ajax({
                url: '@Url.Action("GetIntrusionDetails", "Intrusion")',
                type: 'POST',
                data: { deviceId: vals },
                success: function (data) {
                    fnPollingStatus(data)
                },
                error: function (errordata) {
                    alert('Failure')
                }
            });

        }

        function fnPollingStatus(ResultSet) {
            $("#lblIntruPollingStatus").text(ResultSet.PollingStatus);
            $("#lblIntruStatus").text(ResultSet.Status);
        }

