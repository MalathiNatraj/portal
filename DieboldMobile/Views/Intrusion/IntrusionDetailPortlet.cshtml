     $(document).ready(function () {

            $.ajax({
                url: '@Url.Action("GetDeviceListforIntrusion", "Intrusion")',
                type: 'POST',
                data: { parentType: 'DVR' },
                success: function (data) {
                    $.each(data, function (index, itemData) {
                        $('#IntrusionCategories').val('Select Device');
                        $('#IntrusionCategories').append($('<option/>', {
                            value: itemData.Id,
                            text: itemData.Name
                        })

                        );
                    });
                },
                error: function (errordata) {
                    alert('Failure')
                }
            });


            $('#IntrusionCategories').change(function () {
                var vals = $("#IntrusionCategories").val();
                selectIntrusionDevice(vals);
            });

        });


