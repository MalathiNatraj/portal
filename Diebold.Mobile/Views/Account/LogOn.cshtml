@model DieboldMobile.Models.LogOnModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="en">
<head>
	<meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=9" />

	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=320,user-scalable=false" />

	<link rel="stylesheet" type="text/css" href="../../Content/style.css" />
    <title>Diebold SecureStat</title>
    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $("#UserName").val('User Id');
            $("#Password").val('txtPassword');

            $("#Password").addClass('input');
            $("#UserName").addClass('input');

            $("#UserName").focus(function () {
                var strCtlVal = $('#UserName').val();
                if (strCtlVal != null && strCtlVal != '') {
                    if ($('#UserName').val() == 'User Id') {
                        $('#UserName').val('');
                    }
                }
            });

            $("#Password").focus(function () {
                var strPassword = $('#Password').val();
                if (strPassword != null && strPassword != '') {
                    if ($('#Password').val() == 'txtPassword') {
                        $('#Password').val('');
                    }
                }
            });

            $("#UserName").blur(function () {
                var strUserName = $('#UserName').val();
                if (strUserName == null || strUserName == '') {
                    $('#UserName').val('User Id');
                }
            });

            $("#Password").blur(function () {
                var strPassword = $('#Password').val();
                if (strPassword == null || strPassword == '') {
                    $('#Password').val('txtPassword');
                }
            });

            $("#btnSubmit").click(function () {
                var url = '@Url.Action("LogOn")';
                $("form").attr("action", url);
                $("form").submit();
            });

        });
        function fnShowForgotpwd() {
            var editUri = '@Url.Action("ForgotPassword")';
            location.href = editUri;
        }

        $(document).ready(function () {
            $("a.jQueryBookmark").click(function (e) {
                e.preventDefault(); // this will prevent the anchor tag from going the user off to the link
                var bookmarkUrl = this.href;
                var bookmarkTitle = this.title;

                if (window.sidebar) { // For Mozilla Firefox Bookmark
                    window.sidebar.addPanel(bookmarkTitle, bookmarkUrl, "");
                } else if (window.external || document.all) { // For IE Favorite
                    window.external.AddFavorite(bookmarkUrl, bookmarkTitle);
                } else if (window.opera && window.print) { // For Opera Browsers
                    var elem = document.createElement('a');
                    elem.setAttribute('href', url);
                    elem.setAttribute('title', title);
                    elem.setAttribute('rel', 'sidebar');
                    elem.click();

                } else { // for other browsers which does not support
                    alert('Your browser does not support this bookmark action');
                    return false;
                }
            });
        });

    </script>

</head>

<body>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        <!-- Main Row Starts here -->
        <div class="row">
        	<div class="sixteen columns">
            	<header>
                    <div class="sixteen columns logo">
                        <a href="http://www.diebold.com/dnpssec/default.htm" target="_blank">DIEBOLD</a>
                    </div>
				</header>
                
                <!-- MAIN CONTAINER STARTS HERE -->
                <section>
                	<article>
	                    <div class="sixteen columns login-bg gradient">
                        	<div class="login-cont">
                            	
                                <p><strong>Welcome associates. <br />
                                        From here you can connect with Diebold corporate and its employees on all topics and issues.<br /><br /> 
                                        Thanks and enjoy.</strong></p>
								
                                <div class="login-fld">
                                     @using (Html.BeginForm())
                                        {
                                            <fieldset>
                                               <div style="margin-top:2%; margin-left: 30%;">
                                                    <div id="dvMsg" class="login-msg"> @Html.DisplayFor(model => model.Message)</div>
                                                    <div style="margin-top:3%;">
                                                        @Html.EditorFor(model => model.UserName, new { @class = "login-input" })
                                                    </div>
                                                    <div style="margin-top:3%;">
                                                        @Html.EditorFor(model => model.Password, new { @class = "login-input" })
                                                    </div>
                                                    <div style="margin-top:3%;">
                                                        <input id="btnSubmit" type="submit" class="submit-btn" value="ENTER"/>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        }
                                </div>
                                
                            </div>
                        </div>
                
                        <div align="center">
                            <img src="../../Content/images/bottom-shdw.png" alt="" />
                        </div>

                    </article>
                </section>

				<section>
                	<article>


                        
                        <div class="forgot" align="center">
                        	<p><a href="#"><strong>Forgot User ID?</strong></a><a href="#"><strong>Forgot Password?</strong></a></p>
                        </div>

                	</article>
				</section>                

                <!-- MAIN CONTAINER ENDS HERE -->
                        
                <!-- FOOTER STARTS HERE -->
                <footer>
				</footer>
